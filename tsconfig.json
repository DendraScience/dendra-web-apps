{
    "compilerOptions":
    {
        "allowJs": true,
        "esModuleInterop": true,
        "lib":
        [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ES2020",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "types":
        [
            "vite/client"
        ]
    },
    "ts-node":
    {
        "compilerOptions":
        {
            "moduleResolution": "Node16"
        },
        "esm": true,
        "swc": true
    }
}